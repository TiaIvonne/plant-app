<h1>My own garden</h1>

<div class="own-garden">
    <div class="row">
        {{#each userPlants.likes}}
        <div class="col-lg-12">
            <div class="image">
                <img src="{{this.image_url}}">
            </div>
        <div class="mygarden-information">
            <p>Name: {{this.name}}</p>
            <p>Scientific name: {{scientific_name}}</p>
            <p>Reviews: {{this.reviews}}</p>
            <p>Pet friendly?: {{this.pet_friendly}}</p>
        <div class="social-interactions">
            <div class="sharethis-inline-share-buttons">
            <span class="st_twitter_large" displayText="Tweet"></span>
            <span class="st_facebook_large" displayText="Facebook"></span>
        </div>
        </div>
        </div>
    </div>
 {{/each}}
 </div>
</div>








